<div id="carouselDark" class="carousel carousel-dark slide" data-bs-ride="carousel">
	<div class="carousel-indicators">
		{% for image in banner.images %}
			<button type="button" data-bs-target="#carouselDark" data-bs-slide-to={{loop.index-1}} class="{% if loop.index0 == 0 %}active{% endif %}" aria-current="{% if loop.index0 == 0 %}aria-current=" true "{% endif %}" aria-label="Slide {{loop.index}}"></button>
		{% endfor %}
	</div>
	<div class="carousel-inner">
		{% for image in banner.images %}
			<div class="carousel-item {% if loop.index0 == 0 %}active{% endif %}" data-bs-interval="3000">
				<div class="bg-light border rounded border-light pulse animated  carousel-hero jumbotron py-5 px-4" style="background-image: url({{ image.path|imagine_filter(filter|default('sylius_shop_product_original')) }});">
					<h1 class="hero-title">{{image.title}}</h1>
					<p class="hero-subtitle">{{image.description}}</p>
					<p>
						<a class="btn btn-primary hero-button plat" role="button" href={{image.type}}>Learn more</a>
					</p>
				</div>
			</div>
		{% endfor %}
	</div>
	<button class="carousel-control-prev" type="button" data-bs-target="#carouselDark" data-bs-slide="prev">
		<span class="carousel-control-prev-icon" aria-hidden="true"></span>
		<span class="visually-hidden">Previous</span>
	</button>

	<button class="carousel-control-next" type="button" data-bs-target="#carouselDark" data-bs-slide="next">
		<span class="visually-hidden">Next</span>
		<span class="carousel-control-next-icon" aria-hidden="true"></span>

	</button>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

